@model List<BlogPost>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@{
    ViewData["Title"] = "Top Posts";
}

<div class="text-center">
    <h1 class="display-4">Blog Posts</h1>
</div>

<div class="container row col-md-12">
     <form method="post" action="/Blog/Filter">
         <div class="col-md-8 justify-content-center">
            <label name="poster">Author</label>
            <input name="poster"/>
            <label name="date">Date</label>
            <input name="date"/>
            <button type="submit">Filter</button>
         </div>
    </form>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 pt-2">
            @if (Model.Count != 0)
            {
                foreach (BlogPost blogPost in Model)
                {
                    <div class="card p-3 mb-3">
                        <div class="card-body">
                            <h5 class="card-title mb-2">@blogPost.PostTitle<br /></h5>
                            <p class="card-text">
                                <strong>Author:</strong>@blogPost.Poster.UserName<br />
                                @blogPost.PostText <br />
                                <strong>Rating:</strong>@blogPost.PostRating<br />
                                <small class="text-muted">@blogPost.PostTime</small><br />
                                <div class="comments-section mt-3">
                                    <h6>Comments:</h6>
                                    @if (blogPost.Comments != null && blogPost.Comments.Any())
                                    {
                                        @foreach (var comment in blogPost.Comments)
                                        {
                                            <div class="card mb-2">
                                            <div class="card-body">
                                                <strong>@comment.Commenter.UserName:</strong> @comment.CommentText <br />
                                                <small class="text-muted">Posted on: @comment.CommentDate</small>
                                                @if (SignInManager.IsSignedIn(User))
                                                {
                                                    @if (User.IsInRole("Admin"))
                                                    {
                                                        <a asp-controller="Blog" asp-action="DeleteCommentAsync" asp-route-id="@comment.CommentID">Delete Comment</a>
                                                    }
                                                }
                                            </div>
                                            </div>
                                        }
                                    }
                                </div>
                                <a asp-controller="Blog" asp-action="Comment" asp-route-BlogPostID="@blogPost.BlogPostID"
                                   class="col-3 m-3">Add Comment</a>
                                <a asp-controller="Blog" asp-action="DeleteBlogPostAsync" asp-route-id="@blogPost.BlogPostID"
                                   class="col-3 m-3">Delete Post</a>
                            </p>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center">There are no blog posts right now.</p>
            }
            <br />
            <div class="row">
                <a class="btn btn-primary col-md-2 mx-auto" href="/Blog/BlogPost">Create Post</a>
            </div>
        </div>
    </div>
</div>