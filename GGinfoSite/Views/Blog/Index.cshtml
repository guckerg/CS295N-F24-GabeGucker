@model List<BlogPost>
@{
    ViewData["Title"] = "Top Posts";
}

<div class="text-center">
    <h1 class="display-4">Blog Posts</h1>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post" action="/Blog/Filter">
                <label name="poster" class="col-md-1">Author</label>
                <input name="poster" class="col-md-4"/>
                <label name="date" class="col-md-1">Date</label>
                <input name="date" class="col-md-4"/>
                <button type="submit" class="col-md-1">Filter</button>
            </form>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 pt-2">
            @if (Model.Count != 0)
            {
                foreach (BlogPost blogPost in Model)
                {
                    <div class="card p-3 mb-3">
                        <div class="card-body">
                            <h5 class="card-title mb-2">Title: @blogPost.PostTitle<br /></h5>
                            <p class="card-text">
                                <strong>BlogPost Author:</strong> @blogPost.Poster.Name<br />
                                <strong>Post:</strong> @blogPost.PostText <br />
                                <strong>Rating:</strong> @blogPost.PostRating <br />
                                <strong>Post Date:</strong> @blogPost.PostTime
                            </p>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center">There are no blog posts right now.</p>
            }
            <br />
            <div class="row">
                <a class="btn btn-primary col-md-2 mx-auto" href="/Blog/BlogPost">Create Post</a>
            </div>
        </div>
    </div>
</div>